@model IEnumerable<SmartHup.Models.Terminal>
@{Dictionary<Tuple<string, string>, bool> menu = ViewBag.menu;
    if (menu == null)
    {menu=new Dictionary<Tuple<string, string>, bool>(); }
 }

@{
	ViewBag.Title = "Index";
}

<h2 class="page-title">Terminal Managment</h2>

 @if (menu.ContainsKey(Tuple.Create("Terminals", "Create")))
    {
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class= "btn btn-success"})
</p>
}
    
	<div class="box ">
    <div class="box-header">
        </div>
        <div class="box-body">
            <table class="table table-striped table-bordered table-hover order-column datatable">
                <thead>
                    <tr>


                        <th>
                            ID
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Terminal Status
                        </th>
                        <th>
                            IP
                        </th>
                        <th>
                            Serial Number
                        </th>
                        <th>
                            Model
                        </th>
                  

                        <th>
                            UserName
                        </th>
                        <th>
                            Bank Name
                        </th>
                
                    
                        <th style="width:20%;">

                            Actions
                        </th>
                    </tr>
                <thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.terminalId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.terminalName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.terminalStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.terminalIP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.serialNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.terminalModel)
                            </td>
                     
                            <td>
                                @Html.DisplayFor(modelItem => item.terminalUserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Bank.bankFullName)
                            </td>
                      
                   
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                        Actions
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        @if (menu.ContainsKey(Tuple.Create("Terminals", "Edit")))
                                        {
                                            <li>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.systemId }, new { @class = "fa fa-edit" })
                                            </li>  }
                                                                                @if (menu.ContainsKey(Tuple.Create("Terminals", "Details")))
                                                                                {
                                                                                    <li>
                                                                                        @Html.ActionLink("Details", "Details", new { id = item.systemId }, new { @class = "fa fa-eye" })
                                                                                    </li>       }
                                                                                        @if (menu.ContainsKey(Tuple.Create("Terminals", "Delete")))
                                                                                        {
                                                                                            <li>
                                                                                                @Html.ActionLink("Delete", "Delete", new { id = item.systemId }, new { @class = "fa fa-remove" })
                                                                                            </li>    }
                                                                                        </ul></div>
</td>
                        </tr>
                    }
                </tbody>
                <tfoot>

                </tfoot>
            </table>
</div>
</div>
