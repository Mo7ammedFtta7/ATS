@model IEnumerable<SmartHup.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "AddUser")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.LockoutEnabled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessFailedCount)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Role.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceProvider)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LockoutEnabled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessFailedCount)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Role.Name)

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceProvider.serviceProviderName)
        </td>
        <td>
            @Html.ActionLink("Update User", "UpdateUser", new { id = item.systemId }) |
            @Html.ActionLink("Delete User", "DeleteUser", new { id = item.systemId }) |
            @Html.ActionLink("Reset Password", "ResetPassword", new { id = item.systemId }) |
            @if (!item.LockoutEnabled)
        {
            @Html.ActionLink("Lock User", "LockUser", new { id = item.systemId })
    }
    else
    {
        @Html.ActionLink("UnLock User", "UnLockUser", new { id = item.systemId })
}
        </td>
    </tr>
}

</table>
