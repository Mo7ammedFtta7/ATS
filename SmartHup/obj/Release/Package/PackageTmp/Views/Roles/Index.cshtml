@model IEnumerable<SmartHup.Models.Role>
    @{
        ViewBag.Title = "Index";
        Dictionary<Tuple<string, string>, bool> menu = ViewBag.menu;
        if (menu == null) { menu = new Dictionary<Tuple<string, string>, bool>(); }
    }

    <h2 class="page-title">Roles Managment</h2>
    @if (menu.ContainsKey(Tuple.Create("Roles", "Create")))
    {
        <p>

            <a href="@Url.Action("Create")" class="btn btn-success">Create New</a>
        </p>
    }

    <div class="box ">
        <div class="box-header">
        </div>
        <div class="box-body">
            <table class="table table-striped table-bordered table-hover order-column datatable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.serviceProviderTypeId)
                        </th>

                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceProviderType.Name)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                        Actions
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">


                                        @if (menu.ContainsKey(Tuple.Create("Roles", "Edit")))
                                        {
                                            <li>
                                                <a href="@Url.Action("Edit", "Roles", new { id = item.systemId })"><i class="fa fa-edit"><span class="DelTex">Edit</span></i></a>
                                            </li>
                                        }

                                        @if (menu.ContainsKey(Tuple.Create("Roles", "AssignPages")))
                                        {
                                            <li>
                                                <a href="@Url.Action("AssignPages", "Roles", new { id = item.systemId  })"><i class="fa fa-tasks"><span class="DelTex">Assign</span></i></a>
                                                </li>
                                                }

                                                @if (menu.ContainsKey(Tuple.Create("Roles", "Details")))
                                                {
                                                    <li>
                                                        <a href="@Url.Action("Details", "Roles", new { id = item.systemId })"><i class="fa fa-eye"><span class="DelTex">Details</span></i></a>
                                                        </li>
                                                        }

                                                        @if (menu.ContainsKey(Tuple.Create("Roles", "Delete")))
                                                        {
                                                            <li>
                                                                <a href="@Url.Action("Delete", "Roles", new { id = item.systemId })"><i class="fa fa-remove"><span class="DelTex">Delete</span></i></a>
                                                                </li>
                                                                }
</ul>
</div>
                            </td>
                        </tr>

                    }
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
    </div>

  
