@model IEnumerable<SmartHup.Models.Section>
@{Dictionary<Tuple<string, string>, bool> menu = ViewBag.menu;
    if (menu == null)
    { menu = new Dictionary<Tuple<string, string>, bool>(); }
}

@{

}
<h2>Sections Managment</h2>

@if (menu.ContainsKey(Tuple.Create("Sections", "Create")))
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </p>
}
<!--<link href="~/Content/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />-->
<div class="box ">
    <div class="box-header">
    </div>
    <div class="box-body">
        <table class="table table-striped table-bordered table-hover order-column datatable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SectionName)
                    </th>
                   <th>
                        @Html.DisplayNameFor(model => model.SectionArName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department.DepartmentName)
                    </th>
                    <th>Actions</th>
                </tr>
            <thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SectionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SectionArName)
                        </td>
                      <td>
                            @Html.DisplayFor(modelItem => item.Company.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                        </td>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                    Actions
                                    <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    @if (menu.ContainsKey(Tuple.Create("Sections", "Edit")))
                                    {
                                        <li>

                                            <a href="@Url.Action("Edit", "Sections", new { id = item.systemId })"><i class="fa fa-edit"><span class="DelTex">Edit</span></i></a>
                                        </li>
                                    }

                                    @if (menu.ContainsKey(Tuple.Create("Sections", "Details")))
                                    {
                                        <li>

                                            <a href="@Url.Action("Details", "Sections", new { id = item.systemId })"><i class="fa fa-eye"><span class="DelTex">Details</span></i></a>
                                        </li>
                                    }
                                    @if (menu.ContainsKey(Tuple.Create("Sections", "Delete")))
                                    {
                                        <li>
                                            <a href="@Url.Action("Delete", "Sections", new { id = item.systemId })">
                                                <i class="fa fa-remove"><span class="DelTex">Delete</span></i>
                                            </a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>

            </tfoot>
        </table>
    </div>
</div>
<script>
    $(function () {
        $('#example1').DataTable()
    })
</script>
