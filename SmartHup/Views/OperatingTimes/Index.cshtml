@model IEnumerable<SmartHup.Models.OperatingTime>
@{Dictionary<Tuple<string, string>, bool> menu = ViewBag.menu;
    if (menu == null)
    { menu = new Dictionary<Tuple<string, string>, bool>(); }
}

    <h3> Operating Times Managment</h3>
    <hr />
    @if (menu.ContainsKey(Tuple.Create("OperatingTimes", "Create")))
    {
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        </p>
    }
    <div class="box ">
        <div class="box-header">
        </div>
        <div class="box-body">
            <table class="table table-striped table-bordered table-hover order-column datatable">
                <thead>
                    <tr>
                        <th>
                            Operating Day
                        </th>
                        <th>
                            From Time
                        </th>
                        <th>
                            To Time
                        </th>
                        <th>Actions</th>

                    </tr>
                <thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OperatingDay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FromTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ToTime)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                        Actions
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        @if (menu.ContainsKey(Tuple.Create("OperatingTimes", "Edit")))
                                        {
                                            <li>

                                                <a href="@Url.Action("Edit", "OperatingTimes", new { id = item.SystemId })"><i class="fa fa-edit"><span class="DelTex">Edit</span></i></a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>

                </tfoot>
            </table>
        </div>
    </div>
    <script>
        $(function () {
            $('#example1').DataTable()
        })
    </script>
